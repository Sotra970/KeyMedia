<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.RegisterActivity"
    android:background="@drawable/appp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logomediaaaaaa"/>

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
            android:hint="Enter Name here "
        android:textColor="#ffffff"
        android:backgroundTint="#8b444141"
        android:background="@android:drawable/edit_text"
            android:layout_marginTop="20dp" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Enter Email here "
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:background="@android:drawable/edit_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Enter Adress here "
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:background="@android:drawable/edit_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Enter Phone here "
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:background="@android:drawable/edit_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="Enter Email here "
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:background="@android:drawable/edit_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="Password"
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:background="@android:drawable/edit_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="ReEnter Password"
        android:textColor="#ff0000"
        android:backgroundTint="#8b444141"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:background="@android:drawable/edit_text" />
    <Button
        android:id="@+id/Buttin1"

        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="@drawable/button1"
        android:backgroundTint="#8b444141"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/angry_btn3"

        android:text="ALready User"
        android:textColor="#FFFFFF"
        android:textSize="15dp"

        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="@drawable/button1"
        android:backgroundTint="#ed2d2d"
        android:layout_below="@+id/scrollView"
        android:layout_alignLeft="@+id/Buttin1"
        android:layout_alignStart="@+id/Buttin1"
        android:layout_marginTop="5dp" />
</LinearLayout>
    </ScrollView>
</RelativeLayout>
